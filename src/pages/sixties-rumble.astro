    <!-- Interactive Map/Slider -->
    <div class="mb-16">
      <!-- <h3 class="text-3xl font-bold text-[#064161] text-center mb-8">Explore the Global Soundscape</h3> -->
      
      <!-- Map Container -->
      <div class="relative bg-gradient-to-br from-[#FEE96A]/20 to-[#C13870]/10 rounded-lg p-8 border border-[#FEE96A]/30">
        <div id="world-map" class="relative w-full h-96 bg-[url('/images/world-map-bg.png')] bg-cover bg-center rounded-lg">
          <!-- Region Markers -->
          {regions.map((region) => (
            <button
              class="absolute transform -translate-x-1/2 -translate-y-1/2 w-8 h-8 rounded-full border-2 border-[#064161] shadow-lg transition-all duration-300 hover:scale-125 hover:shadow-xl"
              style={`left: ${region.position.x}%; top: ${region.position.y}%; background-color: ${region.color};`}
              data-region={region.id}
              onclick={`selectRegion('${region.id}')`}
            >
              <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 bg-[#064161]/90 text-white text-xs px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity">
                {region.name}
              </div>
            </button>
          ))}
        </div>
      </div>

      <!-- Region Details -->
      <div id="region-details" class="mt-8">
        <!-- Content will be populated by JavaScript -->
      </div>
    </div>

    <!-- Schedule Section -->
    <div class="max-w-4xl mx-auto">
      <h3 class="text-3xl font-bold text-[#064161] text-center mb-8">Weekly Schedule</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
