---
const props = Astro.props;
const {  title } = props;

---
       
      <div class="accordion-item bg-white border border-[#FEE96A]/30 rounded-lg overflow-hidden">
        <button class="shadow-sm  accordion-trigger w-full px-6 py-4 text-left  bg-[#FEE96A]/30 hover:bg-[#FEE96A]/20 transition-colors flex justify-between items-center">
          <div class="flex items-center space-x-3">
            <slot name="icon" />
            <h4 class="text-xl text-[#064161]">{title}</h4>
          </div>
          <svg class="accordion-icon w-5 h-5 text-[#064161] transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="accordion-content hidden px-6 py-4">
          <div class="text-lg leading-relaxed text-[#064161] space-y-4">
            <slot name="content" />
          </div>
        </div>
      </div>



